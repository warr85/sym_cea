{% extends 'base_app.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/vendor/lightbox2/dist/css/lightbox.css') }}" rel="stylesheet">
{% endblock %}

{%block body %} 
    
     <div class="content-wrapper">
        <div class="container">
            {% for message in app.session.flashBag.get('notice') %}
                <h4 class="alert alert-success">{{ message }}</h4>    
            {%endfor %}
            <div class="row">
                <div class="col-md-9">
                    <h4 class="page-head-line">Solicitud de Ascenso número <code>{{ascenso.id}}</code>: 
                        {{ ascenso.idRolInstitucion.idRol.idPersona.primerNombre }}, 
                        {{ ascenso.idRolInstitucion.idRol.idPersona.primerApellido }}                         
                    </h4>                       
                </div>
                <div class="col-md-3">
                    {% if servicio.idEstatus.id == 1 %}
                        <h4 class="alert alert-success">Estatus <strong>{{servicio.idEstatus}}</strong>
                    {% elseif servicio.idEstatus.id == 3 %}
                        <h4 class="alert alert-danger">Estatus <strong>{{servicio.idEstatus}}</strong> 
                    {% else %}
                        <h4 class="alert alert-warning">Estatus <strong>{{servicio.idEstatus}}</strong> 
                     {% endif %}
                    </h4>                       
                </div>

            </div>
            <div class="row">
                
                <div class="col-md-6">

                    <div class="col-md-4">
                        <img src="{{ asset('bundles/framework/images/portal/logo_ubv.png') }}" />
                    </div>

                    <div class="col-md-8">      
                        
                    
                        
                        
                        {% if escalas is not null %}
                        <div class="form-group">
                            <label for="Escalafones">Escalafones Obtenidos:</label>
                             <table class="table table-striped table-bordered">
                                    <th>Escalafón</th>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                            {% for escala in escalas %}
                               
                                    <tr>
                                        <td>{{escala.idEscala }}</td>
                                        <td>{{escala.fechaEscala | date('d-m-Y') }}</td>
                                        <td>{{escala.idTipoEscala }}</td>
                                    </tr>                                                                                                    
                            {%endfor %}
                            </table>   
                            
                            <p><strong>Escalafón Solicita:</strong> {{ ascenso.idEscalafones.nombre }} </p>
                            
                        </div>
                        {% endif %} 
                        
                        {% if antiguedad is not null %}
                            {% if antiguedad.idEstatus.id != 4 %}
                                <button class="alert alert-info"> El docente tiene una solicitud de antiguedad en estatus {{ antiguedad.idEstatus.nombre }} que no ha formalizado Todavía</button>
                            {% else %}
                                El Docente ya ha formalizado su Antiguedad ante la UBV
                            {% endif %}
                        {% endif %}
   
                         {% if ascenso.tituloTrabajo is not null %}
                        <div class="form-group">
                             <label for="titulo">Título del Trabajo:</label>
                             <input type="text" class="form-control" value="{{ascenso.tituloTrabajo}}" />
                        </div>
                        {% endif %} 

                        </div>
                </div>
                             
                <div class="col-md-5">    
                     <h3>Documentos Consignados</h3>    
                     <div class="widget-content">
                                             
                         
                         
                         <div class="col-xs-4">
                            <div class="thumbnail">
                                <a href="{{asset('uploads/ascenso/'~ ascenso.trabajo)}}" data-lightbox="adscripcion">
                                    <img src="{{ asset('uploads/ascenso/thumb/'~ ascenso.trabajo) }}" />
                                </a>
                              <div class="caption">                                
                                <p>Constancia de Trabajo Act.</p>                              
                              </div>
                          </div>
                        </div>
                                
                                
                         <div class="col-xs-4">
                            <div class="thumbnail">
                                <a href="{{asset('uploads/ascenso/'~ ascenso.expediente)}}" data-lightbox="adscripcion">
                                    <img src="{{ asset('uploads/ascenso/thumb/'~ ascenso.expediente) }}" />
                                </a>
                              <div class="caption">                                
                                <p>Constancia Actualización Expediente</p>                              
                              </div>
                          </div>
                        </div>
                                
                                
                        <div class="col-xs-4">
                            <div class="thumbnail">
                                <a href="{{asset('uploads/ascenso/'~ ascenso.pida)}}" data-lightbox="adscripcion">
                                    <img src="{{ asset('uploads/ascenso/thumb/'~ ascenso.pida) }}" />
                                </a>
                              <div class="caption">                                
                                <p>Constancia Socialización del PIDA</p>                              
                              </div>
                          </div>
                        </div>
                                
                                
                                
                        <div class="col-xs-4">
                            <div class="thumbnail">
                                <a href="{{asset('uploads/ascenso/'~ ascenso.nai)}}" data-lightbox="adscripcion">
                                    <img src="{{ asset('uploads/ascenso/thumb/'~ ascenso.nai) }}" />
                                </a>
                              <div class="caption">                                
                                <p>Constancia Aval del NAI</p>                              
                              </div>
                          </div>
                        </div>
                                
                                
                                
                         <div class="col-xs-4">
                            <div class="thumbnail">
                                <a href="{{asset('uploads/ascenso/'~ ascenso.investigacion)}}" data-lightbox="adscripcion">
                                    <img src="{{ asset('uploads/ascenso/thumb/'~ ascenso.investigacion) }}" />
                                </a>
                              <div class="caption">                                
                                <p>Trabajo de Investigación / Tesis</p>                              
                              </div>
                          </div>
                        </div>
                                
                        {% if ascenso.pertinencia is not null %}         
                        <div class="col-xs-4">
                            <div class="thumbnail">
                                <a href="{{asset('uploads/ascenso/'~ ascenso.pertinencia)}}" data-lightbox="adscripcion">
                                    <img src="{{ asset('uploads/ascenso/thumb/'~ ascenso.pertinencia) }}" />
                                </a>
                              <div class="caption">                                
                                <p>Informe de Pertinencia de la Tesis</p>                              
                              </div>
                          </div>
                        </div>
                        {% endif %}
                                
                       
                         
                         
                        
                         
                         
                             
                         
                         
                       

                    </div>
                </div>
                        
                        

            </div>
                         <!-- MOSTRAR ACTIVIDAD PIDA DEL DOCENTE  -->
                        {% if not pida %}
                            <p class="alert alert-warning">El Docente no ha registrado todavía su actividad PIDA</p>
                        {% else %}                            
                             <div class="form-group">
                            <label for="pida">PIDA:</label>
                            <ul>
                                <li>Objetivo Estratégico: {{pida.idPlanHistoricoNacionalEstrategico.nombre}}</li>
                                <li>Ámbito: {{ pida.idActividadDocente.nombre }}</li>
                                <li>Objetivo Específico: {{ pida.ObjetivoEspecifico }}</li>
                                <li>Fecha inicio: {{ pida.fechaInicio | date('d-m-Y') }} </li>
                                <li>Fecha final: {{ pida.fechaFinal | date('d-m-Y') }} </li>
                                
                            </ul>                            
                        </div>  
                        {% endif %}
                        <a class="btn btn-success btn-sm" href="{{ path('cea_ascenso_actualizar', { 'id': ascenso.id, 'estatus' : 'true' }) }}"  ><span class="fa fa-check"></span>&nbsp;Aprobar</a>
                         <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#motivo_rechazo"  ><span class="fa fa-close"></span>&nbsp;Rechazar</a>
                        
                        
                         <!-- Modal -->
<div class="modal fade" id="motivo_rechazo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
      <form action="{{ path('cea_ascenso_actualizar', { 'id': ascenso.id, 'estatus' : 'false' }) }}" method="POST" name="rechazar">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Rechazo de Solicitud</h4>
      </div>
        
      <div class="modal-body">
          
          
          <div class="form-group">
            <label for="message-text" class="control-label">Mensaje:</label>
            <textarea class="form-control" id="message-text" name="message-text"></textarea>
          </div>
       
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Enviar Correo</button>
      </div>
    </div>
     </form>
  </div>
</div>
        </div>
        
    </div>
    
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/vendor/lightbox2/dist/js/lightbox.min.js') }}"></script>
    {% endblock %}