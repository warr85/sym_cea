{% extends 'base_app.html.twig' %}
{% block body %} 
     <div class="main">       
         <div class="main-inner">    
             <div class="container">                 
                {% for message in app.session.flashBag.get('notice') %}                                
                    <h4 class="alert alert-success">{{ message }}</h4>                    
                {%endfor %}
                
                {% for message in app.session.flashBag.get('warning') %}                                
                    <h4 class="alert alert-warning">{{ message }}</h4>                    
                {%endfor %}
                 <div class="widget widget-nopad">
                      <div class="widget-header"> <i class="fa fa-list-alt"></i>            
                          <h3> CEA@UBV Solicitud de Estado Academico</h3>                         
                      </div>
                     <div class="widget-content">
                        <div class="widget big-stats-container">
                             <div class="widget-content">                                                 
                                 <h6 class="bigstats">           
                                    A través de esta solicitud, el Centro de Estudios ambientales, 
                                    previa verificación, aprobará su solicitud de inclusión del 
                                    estado académico en una malla curricular ofrecida por este
                                    Centro. A continuación mostramos todos sus estados académicos.
                              </h6>
                                 
                                  <table class="table table-striped table-bordered">
                                    <thead>
                                      <tr>
                                        <th> Solicitado </th>
                                        <th> Período </th>
                                        <th> Malla Curricular</th>
                                        <th> Fecha</th>                                                            
                                        <th> observación</th> 
                                      </tr>
                                    </thead>
                                    <tbody>
                                 {% for estado in estado_academico %}
                                    <tr>
                                        <td>{{estado.idDocenteServicio.fechaSolicitud | date('d-m-Y')}}</td>
                                        <td>{{estado.idOfertaMallaCurricular.idPeriodo}}</td>
                                        <td>{{estado.idOfertaMallaCurricular.idMallaCurricularInstitucion.idMallaCurricular}}</td>
                                        <td>{{estado.fecha | date('d-m-Y')}}</td>
                                        <td>{{estado.observacion}}</td>                                        
                                    </tr>
                                     
                                     
                                 {% endfor %}
                                 
                              
                                    </tbody>
                                  </table>
                             </div>   
                            <div >
                                {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}        
                                {{form_start(form)}}
                                {{form_widget(form)}} 
                                 <div class="form-group">
                                <div class="col-sm-2"></div>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.send) }}
                                        <a href="{{ path('cea_index')}}" class="btn btn-sm btn-default"><span class="fa fa-arrow-left">Regresar</span></a>
                                    </div>
                            </div>   
                                {{form_end(form)}}
                                                        
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>
     </div>
    
{% endblock %}
